
{% set template = meta.template %}
{% block topbar %}
    {% include "partials/topbar.html.twig" %}
{% endblock %}
<section id="body" class="{{meta.template}}">
    <div class="padding highlightable">
        {% block content %}
            {% if template == "blog" %}
                {% include "partials/content.blog.html.twig" %}
            {% elseif template == "blog-item" %}
                {% include "partials/content.blog-item.html.twig" %}
            {% elseif template == "doc" %}
                {% include "partials/content.doc.html.twig" %}
            {% elseif template == "chapter" %}
                {% include "partials/content.chapter.html.twig" %}
            {% elseif template == "search" %}
                {% include "partials/content.searchresults.html.twig" %}
            {% else %}
                {{ content }}
            {% endif %}
        {% endblock %}
    </div>
</body>
